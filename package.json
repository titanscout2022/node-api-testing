{
  "name": "red-alliance-api",
  "version": "0.12.0",
  "description": "FRC 2022 Scouting API",
  "main": "index.js",
  "repository": "https://github.com/titanscout2022/red-alliance-api",
  "author": "Titan Scouting",
  "license": "BSD-3-Clause",
  "private": false,
  "scripts": {
    "start": "ts-node-dev src/index.ts",
    "start:prod": "node built/index.js",
    "build": "tsc && cp -r src/api-docs/api/ built/api-docs/api/",
    "test-lint": "eslint . --ext .ts",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "test": "PORT=9999 nyc --reporter=text ts-mocha --timeout 10000 --exit",
    "test:windows": "set PORT=9999 && nyc --reporter=text ts-mocha --timeout 10000 --exit",
    "coverage": "npm test && nyc report --reporter=lcov",
    "doc": "typedoc --out docs src/ --exclude src/routes/ --exclude src/routes/index.ts --name 'The Red Alliance API' --includeVersion --hideGenerator",
    "precommit-msg": "echo 'Pre-commit checks...' && exit 0"
  },
  "pre-commit": [
    "precommit-msg",
    "lint:fix"
  ],
  "nyc": {
    "extension": [
      ".ts",
      ".tsx"
    ],
    "exclude": [
      "test/**.js",
      "src/**.ts"
    ],
    "reporter": [
      "html"
    ],
    "all": true
  },
  "dependencies": {
    "@babel/register": "^7.13.14",
    "@istanbuljs/nyc-config-babel": "^3.0.0",
    "@types/express": "^4.17.9",
    "@types/node": "^14.17.5",
    "bcrypt": "^5.0.1",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "express-jwt": "^6.0.0",
    "express-validation": "^3.0.8",
    "google-auth-library": "^7.3.0",
    "hbs": "^4.1.2",
    "jsdoc": "^3.6.7",
    "jsonwebtoken": "^8.5.1",
    "jwks-rsa": "^1.12.3",
    "mongo-express-req": "^3.0.2",
    "mongodb": "^3.6.10",
    "nodemon": "^2.0.5",
    "snyk": "^1.685.0",
    "socket.io": "^4.1.3",
    "swagger-jsdoc": "^6.0.6",
    "swagger-ui-express": "^4.1.6",
    "tsdoc": "^0.0.4",
    "typescript": "^4.5.4",
    "uuid": "^8.3.2",
    "uuid-apikey": "^1.5.2",
    "validator": "^13.6.0"
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.1",
    "@types/expect": "^24.3.0",
    "@types/mocha": "^8.0.0",
    "@typescript-eslint/eslint-plugin": "^3.7.0",
    "@typescript-eslint/parser": "^3.7.0",
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "chai-json": "^1.0.0",
    "coveralls": "^3.1.0",
    "eslint": "^7.5.0",
    "eslint-config-airbnb": "^18.2.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-react": "^7.20.3",
    "eslint-plugin-react-hooks": "^4.0.6",
    "minimist": ">=1.2.3",
    "mocha": "^8.0.1",
    "nyc": "^15.1.0",
    "pre-commit": "^1.2.2",
    "source-map-support": "^0.5.19",
    "ts-mocha": "^7.0.0",
    "ts-node": "^8.10.1",
    "ts-node-dev": "^1.0.0-pre.56",
    "typedoc": "^0.20.16",
    "validator": "^13.6.0"
  },
  "snyk": true
}
